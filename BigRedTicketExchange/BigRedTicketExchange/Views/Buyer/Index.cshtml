@model List<BigRedTicketExchange.Models.BuyerViewModel>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="body-content">
    <table class="table table-hover">
        <thead>
            <tr>
                <td>
                    @Html.Encode("Name")
                </td>
                <td>
                    @Html.Encode("Email")
                </td>
                <td>
                    @Html.Encode("Phone Number")
                </td>
                <td>
                    @Html.Encode("Availability")
                </td>
            </tr>
        </thead>
        @foreach (var buyerview in Model)
        {
            <tr>
                <td>
                    @buyerview.User.FullName
                </td>
                <td>
                    @buyerview.User.Email
                </td>
                <td>
                    @buyerview.User.PhoneNumber
                </td>
                <td>
                    @if (buyerview.Ticket.IsAvailable == true)
                    {
                        @Html.Encode("Ticket Available")
                    }
                    else
                    {
                        @Html.Encode("Ticket Sold")
                    }
                </td>
                @if (User.Identity.GetUserId() == buyerview.Ticket.UserID)
                {
                    <td>
                        @Html.ActionLink("Remove", "Delete", "Seller", new { id = buyerview.Ticket.TicketID}, null)
                    </td>
                }

            </tr>
        }
    </table>


</div>
